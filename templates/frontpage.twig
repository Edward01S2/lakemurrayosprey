					<noscript>
						Please enable JavaScript to view the 
						<a href="https://disqus.com/?ref_noscript" rel="nofollow">
							comments powered by Disqus.
						</a>
					</noscript>
				</div>
			</div>
		</div>

		<div class="col-4 px-1 ml-3" id="sticky-sidebar">
			<div class="sidebar sticky-top">

				<div class="chat-wrapper">
					<div class="chatroll">
						<iframe frameborder="0" scrolling="no" marginheight="0" marginwidth="0" allowtransparency="true" src="https://chatroll.com/embed/chat/lake-murray-osprey-live-cam?id=BJouKv03XEW&platform=html"></iframe>
					</div>
				</div>

				
			</div>
		</div>

	</div>
			
</div>
		
{% endblock %} 